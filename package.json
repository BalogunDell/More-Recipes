{
  "name": "more-recipes",
  "version": "1.0.0",
  "description": "More-Recipes provides a platform for users to share the awesome and exciting recipe ideas they have invented or learnt. Suppose a user comes up with a food recipe, he/she can post it on More-Recipes and get feedback in form of reviews and votes from other users who explore that recipe. Users can also keep a list of their favorite recipes on the application.",
  "main": "app.js",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "chai": "^4.1.1",
    "coveralls": "^2.13.1",
    "dotenv": "^4.0.0",
    "expect": "^1.20.2",
    "express": "^4.15.4",
    "express-validator": "^4.1.1",
    "jsonwebtoken": "^7.4.3",
    "mocha": "^3.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemailer": "^4.1.0",
    "nyc": "^11.2.0",
    "pg": "^7.2.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.7.5",
    "sequelize-cli": "^2.8.0",
    "supertest": "^3.0.0",
    "winston": "^2.3.1"
  },
  "scripts": {
    "start": "./node_modules/.bin/babel-node ./app.js",
    "test": "./node_modules/.bin/mocha --timeout 500000 --compilers js:babel-register && npm run coveralls",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint ./",
    "coverage": "./node_modules/.bin/nyc --reporter=lcov mocha --reporter spec --timeout 40000 --compilers js:babel-core/register test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ruqoyah/More-Recipes.git"
  },
  "keywords": [
    "More",
    "Recipes",
    "Application"
  ],
  "author": "Rukayat Odukoya",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ruqoyah/More-Recipes/issues"
  },
  "homepage": "https://github.com/Ruqoyah/More-Recipes#readme",
  "devDependencies": {
    "eslint-to-editorconfig": "^1.2.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.7.0"
  }
}
